# API Keys - Copy to .env and fill in your values

# BallDon'tLie API (All-Star tier recommended)
BALLDONTLIE_API_KEY=your_api_key_here

# The Odds API
ODDS_API_KEY=your_api_key_here

# OpenRouter API for AI analysis
OPENROUTER_API_KEY=your_api_key_here

# Model to use via OpenRouter (default: anthropic/claude-3.5-sonnet)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Kelly Criterion / Bankroll Settings
BANKROLL=1000.0
KELLY_FRACTION=0.25
MAX_BET_PCT=0.05
MIN_BET_PCT=0.005

# Notifications
NOTIFICATIONS_ENABLED=true
NOTIFY_HIGH_ONLY=true

# Discord Webhook (get from Server Settings > Integrations > Webhooks)
DISCORD_WEBHOOK_URL=

# Telegram (optional, for future use)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
